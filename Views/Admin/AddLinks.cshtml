@model Bolo.DirectoryNav.ViewModels.LinkAddViewModel

@{ Layout.Title = T("Create new Link").ToString(); }

@using (Html.BeginFormAntiForgeryPost()){
    @Html.ValidationSummary()

    <input type="hidden" id="TitleID" name="TitleID" value="@Model.TitleId" />
    
    <fieldset>
        <label for="Name">@T("Link Name")</label>
        <input type="text" name="LinkName" class="textMedium" />

        <label for="Url">@T("Url")</label>
        <input type="text" name="Url" class="textMedium" />
    </fieldset>
    <fieldset >
        <button class="primaryAction" type="submit">@T("Save")</button>
        @Html.ActionLink("Back", "Links", null, new { Class = "button"})
    </fieldset>
}

